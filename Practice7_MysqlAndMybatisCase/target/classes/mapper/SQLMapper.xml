<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 命名空间mapper,如果有多个mapper文件，这个必须唯一 -->
<mapper namespace="com.MysqlAndMybatis.models">

<!--查询数据库，为模拟接口请求提供数据驱动参数-->
    <!--获取登陆接口case-->
    <select id="loginCase" parameterType="Integer"  resultType="com.MysqlAndMybatis.models.LoginCase">
        select * from logincase where id = #{id};  <!--根据id查询表数据-->
    </select>

    <!--添加用户接口case-->
    <select id="addUserCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.AddUserCase">
        select * from addusercase where id=#{id};   <!--根据id查询表数据-->
    </select>

    <!--获取用户信息case-->
    <select id="getUserInfoCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.GetUserInfoCase">
        <!-- SQL语句 -->
        select * from getuserinfocase where id=#{id};   <!--根据id查询表数据-->
    </select>

    <!--获取用户列表case-->
    <select id="getUserListCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.GetUserInfoListCase">
        <!-- SQL语句 -->
        select * from getuserlistcase where id=#{id};   <!--根据id查询表数据-->
    </select>

    <!--更新/删除用户信息case-->
    <select id="updateUserInfoCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.UpdateUserInfoCase">
        select * from updateuserinfocase where id = #{id};    <!--根据id查询表数据-->
    </select>



    <!--如下是主动查询数据库，获取期望数据，与调用接口返回的数据校验是否一致-->
    <!--添加用户-->
    <select id="addUser" parameterType="com.MysqlAndMybatis.models.AddUserCase" resultType="com.MysqlAndMybatis.models.User">
        select * from user where
        userName=#{userName}
        and password=#{password}
        and sex=#{sex}
        and age=#{age};
    </select>

    <!--获取用户信息-->
    <select id="getUserInfo" parameterType="com.MysqlAndMybatis.models.GetUserInfoCase" resultType="com.MysqlAndMybatis.models.User">
        <!-- SQL语句 -->
        select * from user where
        id=#{userId};
    </select>

    <!--获取用户列表-->
    <select id="getUserList" parameterType="com.MysqlAndMybatis.models.GetUserInfoListCase" resultType="com.MysqlAndMybatis.models.User">
        <!-- SQL语句 -->
        select * from user
        <trim prefix="WHERE" prefixOverrides="and">
            <if test="null != userName and '' !=userName">
                AND userName=#{userName}
            </if>
            <if test="null != sex and '' !=sex">
                AND sex=#{sex}
            </if>
            <if test="null != age and '' !=age">
                AND age=#{age}
            </if>
        </trim>
        ;
    </select>

    <!--获取更新后的数据-->
    <select id="getUpdateUserInfo" parameterType="com.MysqlAndMybatis.models.UpdateUserInfoCase" resultType="com.MysqlAndMybatis.models.User">
        select * from user
        <trim prefix="WHERE" prefixOverrides="and">
            <if test="null != userName and '' !=userName">
                AND userName=#{userName}
            </if>
            <if test="null != sex and '' !=sex">
                AND sex=#{sex}
            </if>
            <if test="null != age and '' !=age">
                AND age=#{age}
            </if>
            <if test="null != permission and '' !=permission">
                AND permission=#{permission}
            </if>
            <if test="null != isDelete and '' !=isDelete">
                AND isDelete=#{isDelete}
            </if>
        </trim>
        And id = #{userId};
    </select>
</mapper>