<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 命名空间mapper,如果有多个mapper文件，这个必须唯一 -->
<mapper namespace="com.MysqlAndMybatis.models">

<!--查询数据库，为模拟接口请求提供数据驱动参数-->
    <!--获取登陆接口case-->
    <select id="loginCase" parameterType="Integer"  resultType="com.MysqlAndMybatis.models.LoginCase">
        select * from logincase where id = #{id};  <!--根据id查询表数据-->
    </select>

    <!--添加用户接口case-->
    <select id="addUserCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.AddUserCase">
        select * from addusercase where id=#{id};   <!--根据id查询表数据-->
    </select>

    <!--删除用户接口case-->
    <select id="deleteUserCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.DeleteUserCase">
        <!-- SQL语句 -->
        select * from deleteusercase where id=#{id};   <!--根据id查询表数据-->
    </select>

    <!--获取用户列表接口case-->
    <select id="getUserListCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.GetUserListCase">
        <!-- SQL语句 -->
        select * from getuserlistcase where id=#{id};   <!--根据id查询表数据-->
    </select>

    <!--更新用户信息接口case-->
    <select id="updateUserInfoCase" parameterType="Integer" resultType="com.MysqlAndMybatis.models.UpdateUserInfoCase">
        select * from updateuserinfocase where id = #{id};    <!--根据id查询表数据-->
    </select>



    <!--如下是主动查询数据库，检验请求接口后存储于数据库中的数据前后是否一致-->
    <!--查询添加用户-->
    <select id="addUser" parameterType="com.MysqlAndMybatis.models.AddUserCase" resultType="com.MysqlAndMybatis.models.User">
        select id,user_name userName,password,sex,age,permission from user
        <where>
            <if test="userName !=null and userName !=''">
                and user_name=#{userName}
            </if>
            <if test="password !=null and password !=''">
                and password=#{password}
            </if>
            <if test="sex !=null and sex !=''">
                and sex=#{sex}
            </if>
            <if test="age !=null and age !=''">
                and age=#{age}
            </if>
            <if test="permission !=null and permission !=''">
                and permission=#{permission}
            </if>
        </where>
    </select>
<!--    刷新数据库-->
    <update id="flushTable">
        FLUSH TABLE;
    </update>

    <!--删除用户-->
    <select id="deleteUser" parameterType="com.MysqlAndMybatis.models.DeleteUserCase" resultType="com.MysqlAndMybatis.models.User">
        <!-- SQL语句 -->
        select id,user_name userName,password,sex,age,permission from user where
        id=#{userId} and user_name=#{userName};
    </select>

