    <!--查询更新用户-->
    <select id="getUpdateUserInfo" parameterType="com.MysqlAndMybatis.models.UpdateUserInfoCase" resultType="com.MysqlAndMybatis.models.User">
        select id,user_name userName,password,sex,age,permission from user
        <trim prefix="WHERE" prefixOverrides="and">
            <if test="null != userName and '' !=userName">
                AND user_name=#{userName}
            </if>
            <if test="null != sex and '' !=sex">
                AND sex=#{sex}
            </if>
            <if test="null != age and '' !=age">
                AND age=#{age}
            </if>
        </trim>
    </select>
</mapper>