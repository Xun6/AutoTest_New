<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.TestInterfaceDevelopMapper.mapper.UserMapper">
<!--    高级输出映射-->
    <resultMap id="BaseResultMap" type="com.TestInterfaceDevelopMapper.model.User">
        <id column="user_id" jdbcType="INTEGER" property="id"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="age" jdbcType="VARCHAR" property="age"/>
        <result column="sex" jdbcType="VARCHAR" property="sex"/>
        <result column="permission" jdbcType="VARCHAR" property="permission"/>
        <result column="is_delete" jdbcType="VARCHAR" property="isDelete"/>
    </resultMap>

    <!--登录接口 sql语句-->
    <select id="login" parameterType="com.TestInterfaceDevelopMapper.model.User" resultType="Integer">
        select count(*) from user
        <where>
            <if test="userName !=null and userName !=''">
                and user_name=#{userName}
            </if>
            <if test="password !=null and password !=''">
                and password=#{password}
            </if>
        </where>
    </select>

<!--    查询用户-->
    <select id="getAllUser" resultMap="BaseResultMap" parameterType="com.TestInterfaceDevelopMapper.model.User">
        select id user_id,user_name,age,sex,permission
        from user
        where 1=1
        <if test="userName !=null and userName !=''">
            and user_name like concat('%',#{userName},'%')
        </if>
    </select>

    <!--添加用户-->
    <insert id="addUser" parameterType="com.TestInterfaceDevelopMapper.model.User">
        insert into
        user (user_name,password,sex,age,permission,is_delete)
        values (#{userName},#{password},#{sex},#{age},#{permission},#{isDelete});
    </insert>
    


