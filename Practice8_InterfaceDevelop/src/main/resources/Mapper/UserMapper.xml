<!--    删除原主键-->
    <update id="delPrimaryKeyField">
        alter table user drop id;
    </update>
<!--    重新创建主键-->
    <update id="reAddPrimaryKeyField">
        alter table user add id int(25) primary key not null auto_increment first;
    </update>

    <!--更新用户-->
    <update id="updateUserInfo" parameterType="com.TestInterfaceDevelopMapper.model.User">
        update user
        <trim prefix="SET" suffixOverrides=",">
            <if test="null != userName and '' !=userName">
                user_name=#{userName},
            </if>
            <if test="null != sex and '' !=sex">
                sex=#{sex},
            </if>
            <if test="null != age and '' !=age">
                age=#{age},
            </if>
        </trim>
        where id =#{id}
    </update>

<!--    删除用户-->
    <update id="deleteUser" parameterType="Integer">
<!--        update user set is_delete=1-->
<!--        where id=#{id};-->
        delete from user where id=#{id};
